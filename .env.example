# App
NODE_ENV=development
APP_URL=http://localhost:3000

# Database (Postgres)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/submitready?schema=public"

# Storage
# local for local dev, blob for Vercel Blob, s3 for S3-compatible storage
STORAGE_DRIVER=local
LOCAL_STORAGE_DIR=/tmp/submitready

# Vercel Blob (required when STORAGE_DRIVER=blob)
BLOB_READ_WRITE_TOKEN=

# S3-compatible (optional when STORAGE_DRIVER=s3)
S3_BUCKET=
S3_REGION=
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Stripe
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
STRIPE_PRICE_ID=price_xxx

# SMTP email (optional for local; app logs link when omitted)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=noreply@example.com
